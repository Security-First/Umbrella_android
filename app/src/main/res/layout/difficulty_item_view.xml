<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <FrameLayout
        android:id="@+id/difficultLayout"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@color/umbrella_green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/difficultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:text="Beginner" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/difficultLayout"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="76dp">

        <TextView
            android:id="@+id/difficultDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="I need to know what to do in case people force me to hard over my password" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>