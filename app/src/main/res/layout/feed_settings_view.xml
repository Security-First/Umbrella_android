<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/no_feed_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/recycler_view_margin_bottom"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dashboard_feed_margin_top"
                android:padding="@dimen/dashboard_feed_normal_padding"
                android:visibility="visible"
                card_view:cardCornerRadius="@dimen/card_view_default_radius">

                <LinearLayout
                    android:id="@+id/setUndefinedFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_feed_small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/set_your_feed"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="7sp"
                        android:padding="5dp"
                        android:text="@string/set_your_feed_label"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:padding="@dimen/dashboard_feed_small_padding"
                        android:singleLine="true"
                        android:text="@string/set_now"
                        android:textColor="@color/umbrella_green" />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dashboard_feed_margin_top"
                android:padding="@dimen/dashboard_feed_normal_padding"
                android:visibility="visible"
                card_view:cardCornerRadius="@dimen/card_view_default_radius">

                <LinearLayout
                    android:id="@+id/setRefreshInterval"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="@dimen/dashboard_feed_small_margin_top"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/feed_interval"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/feedRefreshInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="7sp"
                        android:textColor="@color/umbrella_green"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/dashboard_feed_big_margin_start"
                        android:layout_marginLeft="@dimen/dashboard_feed_big_margin_start"
                        android:layout_marginTop="@dimen/dashboard_feed_medium_margin_top"
                        android:textColor="@color/umbrella_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/set"
                        android:textColor="@color/umbrella_green"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dashboard_feed_margin_top"
                android:padding="@dimen/dashboard_feed_normal_padding"
                android:visibility="visible"
                card_view:cardCornerRadius="@dimen/card_view_default_radius">

                <LinearLayout
                    android:id="@+id/setLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_feed_small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/location"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/feedViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/feed_location_label"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/set"
                        android:textColor="@color/umbrella_green"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dashboard_feed_margin_top"
                android:padding="@dimen/dashboard_feed_normal_padding"
                android:visibility="visible"
                card_view:cardCornerRadius="@dimen/card_view_default_radius">

                <LinearLayout
                    android:id="@+id/setFeedSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dashboard_feed_small_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginLeft="14dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/feed_sources"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/feedSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/feed_source_label"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:text="@string/set"
                        android:textColor="@color/umbrella_green"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>